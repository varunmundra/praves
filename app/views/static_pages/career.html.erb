      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



 <div class="form-group">   
    <%= f.label :name %><br>
    <%= f.text_field :name, type:"text", tabindex: "1", class: "form-control", pattern: "[a-zA-Z. ]{1,50}",  placeholder: 'Enter your name',  required: true  %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, type:"email", tabindex: "2", class: "form-control",  placeholder: 'Enter your email address',  required: true  %>
  </div>
  <div class="form-group">
    <%= f.label :mobile %><br>
    <%= f.number_field :mobile, type:"tel", tabindex: "3", class: "form-control", pattern: "[0-9]{10}",  placeholder: 'Enter your mobile number', maxlength:"10", required: true  %>
  </div>
  <div class="form-group">
    <%= f.label :qualification %><br>
    <%= f.text_field :qualification, type:"text", tabindex: "4", class: "form-control",  placeholder: 'Enter the qualification', required: true  %>
  </div>
  <div class="form-group">
    <%= f.label :resume, "Upload Resume" %><br>
    <%= f.file_field :resume, type:"file", tabindex: "5", class: "form-control",  placeholder: 'Upload a file', required: true  %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', tabindex: "6", :class => 'btn btn-primary btn-block' %>
  </div>
<% end %>

